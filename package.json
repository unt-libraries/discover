{
  "name": "unt-blacklight",
  "scripts": {
    "start": "docker-compose up",
    "build": "docker-compose build",
    "web:run": "docker-compose run --rm web",
    "web:assetServer": "docker-compose run -e \"RAILS_ENV=development\" --rm web ./bin/webpack --watch --colors --progress",
    "rubyStyle": "docker-compose run --rm web rubocop --require rubocop-airbnb",
    "javascriptStyle": "docker-compose run --rm web node_modules/eslint/bin/eslint.js .",
    "test": "docker-compose run -e \"RAILS_ENV=test\" --rm web bundle exec rspec",
    "test:verbose": "yarn test --format documentation",
    "web:compileAssets": "docker-compose run --rm web rails assets:precompile",
    "web:dbCreate": "docker-compose run --rm web rake db:create",
    "web:dbMigrate": "docker-compose run --rm web rake db:migrate",
    "web:credentials": "docker-compose run --rm web bash -c \"EDITOR=nano rails credentials:edit\"",
    "docker:stopAll": "docker stop $(docker ps -a -q)",
    "docker:removeAll": "docker rm $(docker ps -a -q)",
    "docker:prune": "docker system prune --volumes",
    "updateBrowserStats": "npx browserslist-ga"
  },
  "private": true,
  "dependencies": {
    "@rails/ujs": "^6.0.2-2",
    "@rails/webpacker": "^5.0.1",
    "autotrack": "^2.4.1",
    "blacklight-frontend": "^7.7.0",
    "blacklight-marc": "https://github.com/projectblacklight/blacklight-marc.git",
    "bootstrap": "^4.4.1",
    "bootstrap-tourist": "^0.3.2",
    "clean-webpack-plugin": "^3.0.0",
    "corejs-typeahead": "^1.3.1",
    "expose-loader": "^0.7.5",
    "jquery": "3.4.1",
    "lazysizes": "^5.2.0",
    "lodash": "^4.17.15",
    "moment": "2.24.0",
    "moment-locales-webpack-plugin": "^1.1.2",
    "popper.js": "^1.16.0",
    "rails-erb-loader": "^5.5.2",
    "turbolinks": "^5.2.0",
    "web-vitals": "^0.2.1",
    "webpack": "^4.42.1"
  },
  "resolutions": {
    "bootstrap-tourist/jquery": "3.4.1",
    "corejs-typeahead/jquery": "3.4.1",
    "typeahead.js/jquery": "3.4.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "stylelint": "^13.3.2",
    "stylelint-config-standard": "^20.0.0",
    "webpack-dev-server": "^3.10.3"
  },
  "version": "0.0.0"
}
