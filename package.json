{
  "name": "discover",
  "version": "1.2.0",
  "scripts": {
    "start": "docker compose up",
    "stop": "docker compose down",
    "build": "docker compose build",
    "web:run": "docker compose run --rm web",
    "rubyStyle": "docker compose run --rm web rubocop --require rubocop-airbnb",
    "javascriptStyle": "docker compose run --rm web node_modules/eslint/bin/eslint.js .",
    "testJest": "docker compose run -e \"RAILS_ENV=test\" -e \"NODE_ENV=test\" --rm web yarn jest",
    "testRspec": "docker compose run -e \"RAILS_ENV=test\" -e \"NODE_ENV=test\" -e \"NODE_OPTIONS=--openssl-legacy-provider\" --rm web bundle exec rspec",
    "test:verbose": "yarn test --format documentation",
    "web:compileAssets": "docker compose run -e \"RAILS_ENV=development\" -e \"NODE_OPTIONS=--openssl-legacy-provider\" --rm web rails assets:precompile",
    "web:dbCreate": "docker compose run --rm web rake db:create",
    "web:dbMigrate": "docker compose run --rm web rake db:migrate",
    "web:credentials": "docker compose run --rm web bash -c \"EDITOR=nano rails credentials:edit\"",
    "tailLogs": "docker compose logs -t --tail",
    "followLogs": "docker compose logs -t --follow",
    "grepLogs": "docker compose logs -t | grep",
    "docker:stopAll": "docker stop $(docker ps -a -q)",
    "docker:removeAll": "docker rm $(docker ps -a -q)",
    "docker:prune": "docker system prune -a && docker volume prune -a"
  },
  "private": true,
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.21.0",
    "@babel/preset-env": "^7.21.0",
    "@babel/preset-typescript": "^7.21.0",
    "@babel/runtime": "^7.21.0",
    "@babel/runtime-corejs3": "^7.21.0",
    "@popperjs/core": "^2.11.5",
    "@rails/ujs": "^6.0.2-2",
    "@rails/webpacker": "5.4.3",
    "@types/bootstrap": "^5.2.6",
    "@types/browser-update": "^3.3.0",
    "@types/google.analytics": "^0.0.42",
    "@types/jquery": "^3.5.16",
    "@types/mark.js": "^8.11.8",
    "autotrack": "^2.4.1",
    "babel-loader": "^8.0",
    "blacklight-frontend": "^7.7.0",
    "blacklight-marc": "https://github.com/projectblacklight/blacklight-marc.git",
    "bootstrap": "^4.4.1",
    "bootstrap-tourist": "^0.3.2",
    "brotli-webpack-plugin": "^1.1.0",
    "browser-update": "^3.3.40",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "3.29.0",
    "corejs-typeahead": "^1.3.1",
    "flot": "^4.2.1",
    "fork-ts-checker-webpack-plugin": "6.5.3",
    "intersection-observer": "^0.11.0",
    "jquery": "^3.5.1",
    "lazysizes": "^5.2.0",
    "lodash": "^4.17.19",
    "mark.js": "^8.11.1",
    "moment": "2.24.0",
    "moment-locales-webpack-plugin": "^1.1.2",
    "popper.js": "^1.16.0",
    "rails-erb-loader": "^5.5.2",
    "source-map-loader": "^1.1.3",
    "ts-loader": "~8.4.0",
    "turbolinks": "^5.2.0",
    "typescript": "^4.9.5",
    "web-vitals": "^0.2.4",
    "webpack": "^4.46.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "babel-jest": "^29.5.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "expose-loader": "1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "ts-jest": "^29.0.5",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3"
  }
}
