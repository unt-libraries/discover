<%# Global Search Tool %>
<%
  html_classes = load_yaml_data('www/html_classes')['offcanvas']['search']
  urls = load_yaml_data('www/urls')
%>

<div class="<%= html_classes['wrapper'] %>"
     id="offcanvas-search">
  <div class="<%= html_classes['container'] %>">
    <div class="<%= html_classes['header'] %>">
      <button type="button"
              class="<%= html_classes['esc'] %>"
              data-bs-toggle="collapse"
              data-bs-target="#offcanvas-search">
        close
        <%= render partial: 'shared/www/utils/svg', locals: {
          use: "svg-xmark",
          classes: "svg-inline--fa",
          viewBox: "0 0 512 512",
          decorative: true,
          title: "close",
        } %>
      </button>
    </div>
    <div class="<%= html_classes['body'] %>">
      <%= render 'shared/www/search/bento', placement: 'offcanvas' %>
      <p class="<%= html_classes['suffix'] %>">
        <%= render partial: 'shared/www/utils/svg', locals: {
          use: "svg-circle-exclamation",
          viewBox: "0 0 512 512",
          decorative: true,
          title: "notice",
          classes: "svg-inline--fa fa-fw me-2 fa-lg text-warning",
        } %>
        Some items are only available on campus
        or will require authentication via
        <a class="<%= html_classes['links'] %>"
           href="<%= urls['unt']['ams'] %>">EUID and Password</a> at the point of use.
      </p>
    </div>
  </div>
</div>
