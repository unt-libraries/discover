<% url_home = "https://library.unt.edu" %>
<% url_login = "#{url_home}/accounts-login/" %>
<% url_ask_us = "#{url_home}/ask-us/" %>
<% url_about = "#{url_home}/about/" %>
<% url_research = "#{url_home}/research/" %>
<% url_services = "#{url_home}/services/" %>
<% url_spaces = "#{url_home}/spaces/" %>
<% url_news = "#{url_home}/news/" %>
<% url_events = "#{url_home}/events/" %>

<div class="drawer fade" id="main-menu-drawer" tabindex="-1" role="dialog" aria-labelledby="main-drawer-title" aria-hidden="true" data-turbolinks="false">
  <div class="modal-dialog modal-dialog--right" role="document">
    <div class="drawer-content">
      <div class="drawer-header">
        <h2 class="drawer-title px-3" id="main-drawer-title">Menu</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <i aria-hidden="true" class="fas fa-times fa-lg"></i>
        </button>
      </div>

      <div class="drawer-body">
        <div class="d-flex justify-content-around" role="group" aria-label="Basic example">
          <a href="tel:9405653245"
             class="btn btn-success btn-lg w-25"
             ga-on="click"
             ga-event-category="link - drawer"
             ga-event-action="telephone"
             ga-event-label="tel:9405653245"
             ga-event-value="1">
            <i aria-hidden="true" class="fas fa-phone"></i><br/>
            <span class="small">
              CALL
              <span class="sr-only"> The Libraries</span>
            </span>
          </a>
          <a href="<%= url_ask_us %>"
             class="btn btn-success btn-lg w-25"
             ga-on="click"
             ga-event-category="link - drawer"
             ga-event-action="libraries"
             ga-event-label="<%= url_ask_us %>"
             ga-event-value="1">
            <i aria-hidden="true" class="fas fa-question"></i><br/>
            <span class="small">ASK US</span>
          </a>
          <a href="<%= url_login %>"
             class="btn btn-success btn-lg w-25"
             ga-on="click"
             ga-event-category="link - drawer"
             ga-event-action="libraries"
             ga-event-label="<%= url_login %>"
             ga-event-value="1">
            <i aria-hidden="true" class="fas fa-user"></i><br/>
            <span class="small">
              <span class="sr-only">Account </span>
              LOGIN
            </span>
          </a>
        </div>

        <hr class="drawer__divider" />

        <a href="/"
           class="nav-item nav-link"
           ga-on="click"
           ga-event-category="link - drawer"
           ga-event-action="libraries"
           ga-event-label="/"
           ga-event-value="1">University Libraries Home</a>
        <a href="<%= url_about %>"
           class="nav-item nav-link"
           ga-on="click"
           ga-event-category="link - drawer"
           ga-event-action="libraries"
           ga-event-label="<%= url_about %>"
           ga-event-value="1">
          <span class="sr-only">Libraries: </span>
          About</a>
        <a href="<%= url_research %>"
           class="nav-item nav-link"
           ga-on="click"
           ga-event-category="link - drawer"
           ga-event-action="libraries"
           ga-event-label="<%= url_research %>"
           ga-event-value="1">
          <span class="sr-only">Libraries: </span>
          Research</a>
        <a href="<%= url_services %>"
           class="nav-item nav-link"
           ga-on="click"
           ga-event-category="link - drawer"
           ga-event-action="libraries"
           ga-event-label="<%= url_services %>"
           ga-event-value="1">
          <span class="sr-only">Libraries: </span>
          Services</a>
        <a href="<%= url_spaces %>"
           class="nav-item nav-link"
           ga-on="click"
           ga-event-category="link - drawer"
           ga-event-action="libraries"
           ga-event-label="<%= url_spaces %>"
           ga-event-value="1">
          <span class="sr-only">Libraries: </span>
          Spaces</a>
        <a href="<%= url_news %>"
           class="nav-item nav-link"
           ga-on="click"
           ga-event-category="link - drawer"
           ga-event-action="libraries"
           ga-event-label="<%= url_news %>"
           ga-event-value="1">
          <span class="sr-only">Libraries: </span>
          News </a>
        <a href="<%= url_events %>"
           class="nav-item nav-link"
           ga-on="click"
           ga-event-category="link - drawer"
           ga-event-action="libraries"
           ga-event-label="<%= url_events %>"
           ga-event-value="1">
          <span class="sr-only">Libraries: </span>
          Events</a>

        <hr class="drawer__divider" />

        <nav class="nav justify-content-center py-4" aria-label="Social Media Links">
          <% t('social').select { |item| item[:name] != 'rss' }.each do |item| %>
          <a class="nav-item nav-link nav-link--social"
             ga-on="click"
             ga-event-category="link - drawer"
             ga-event-action="social"
             ga-event-label="<%= item[:url] %><%= item[:id] %>"
             ga-event-value="1"
             aria-label="<%= item[:label] %>"
             href="<%= item[:url] %><%= item[:id] %>"
             rel="noopener"
             data-toggle="tooltip"
             data-placement="bottom"
             data-container="body"
             title="<%= item[:name] %>">
            <i aria-hidden="true" class="<%= item[:icon] %> fa-lg"></i>
            <span class="sr-only"><%= item[:name] %></span>
          </a>
          <% end %>
        </nav>
      </div>
    </div>
    <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
         data-src="<%= asset_pack_path 'media/images/backgrounds/drawer.png' %>"
         class="lazyload cute d-none"
         aria-hidden="true"
         alt="illustration of Willis Library and Hurley Administration building" />
  </div>
</div>



