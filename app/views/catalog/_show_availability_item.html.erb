<div class="row item-row"
     <%= item['i'].blank? ? "data-no-api-request" : "data-item-id=#{item['i']}" %>
     data-item-call-number="<%= item['c'] %>"
     data-item-location="<%= item['l'] %>"
     data-item-barcode="<%= item['b'] %>"
     data-item-notes="<%= item['n'] %>"
     data-item-requestability="<%= item['r'] %>">
  <div class="col blacklight-location result__value" data-item-location="<%= item['l'] %>"></div>
  <div class="col blacklight-call-number result__value"data-item-call-number="<%= item['c'] %>"><%= item['c'] %></div>
  <div class="col blacklight-availability result__value"><%= item['i'] ? "Checking availability" : "Unavailable" %></div>
  <div class="col blacklight-request result__value d-none" data-item-requestability="<%= item['r'] %>">
    <% unless item['r'].blank? %>
      <%= link_to_request_item document, item %>
    <% end %>
  </div>
  <% if items_have_notes?(items) %>
    <div class="col blacklight-notes result__value">
      <% unless item['n'].blank? %>
        <% item['n'].each do |note| %>
          <%= note %><br>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>