<%# Render a thumbnail link for index view (with counter), image for show view %>
<% if defined? document_counter %>
  <% counter = document_counter_with_offset(document_counter) %>
  <%= render_thumbnail(document, { counter: counter,
                                   'ga-on': 'click',
                                   'ga-event-category': 'List Item Link',
                                   'ga-event-action': 'Thumbnail image',
                                   'ga-event-label': document[:thumbnail_url]
  })
  %>
<% else %>
  <%= render_thumbnail(document) %>
<% end %>

