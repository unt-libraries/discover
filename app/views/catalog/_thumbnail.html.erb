<div class="thumbnail-wrapper col-xs-5 col-sm-4 col-md-3 mb-4" aria-hidden="true">
  <% if presenter(document).respond_to?('thumbnail') && presenter(document).thumbnail.exists? && tn = presenter(document).thumbnail.thumbnail_tag({}, counter: document_counter_with_offset(document_counter)) %>
    <%= tn %>
  <% else %>
    <%= link_to(document, class: "thumbnail-link", tabindex: "-1", data: document.identifier_data) do %>
      <div class="document-thumbnail text-center">
        <i class="icon far fa-10x fa-<%= document.format_icon %>"></i>
        <span class="sr-only item-title"><%= document[:full_title] %></span>
      </div>
    <% end %>
  <% end %>
</div>
