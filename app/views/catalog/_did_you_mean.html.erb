<% if should_show_spellcheck_suggestions? @response %>
  <div id="spell" class="alert alert-warning mb-0" role="alert">
    <span class="suggest"><em><%= t('blacklight.did_you_mean', :options => safe_join(@response.spelling.words.map { |word| link_to_query(word) }, " #{t('blacklight.or')} ")).html_safe %></em></span>
  </div>
<% end %>
