<% @page_title = t('blacklight.search.page_title.title', :total_num => get_number_search_results(@response), :constraints => render_search_to_page_title(search_state), :application_name => application_name) %>

<% content_for(:head) do -%>
  <%= render "catalog/opensearch_response_metadata", response: @response %>
  <%= rss_feed_link_tag %>
  <%= atom_feed_link_tag %>
  <%= json_api_link_tag %>
<% end %>

<div class="card">
  <div class="card-body">
    <%= render 'search_header' %>

    <h2 class="visually-hidden"><%= t('blacklight.search.search_results') %></h2>

    <%- if @response.empty? %>
      <%= render 'zero_results' %>
    <%- elsif render_grouped_response? %>
      <%= render 'group' %>
    <%- else %>
      <%= render_document_index @response.documents %>
    <%- end %>

    <%= render 'results_pagination' %>
  </div>
</div>
