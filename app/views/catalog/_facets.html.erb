<% content_for(:sidebar) do %>
  <div id="facets" class="facets sidenav facets-toggleable-sm">

    <div class="navbar">
      <h2 class="facets-heading">
        <%= t('blacklight.search.facets.title') %>
      </h2>

      <button class="btn facets-expand-collapse d-none d-md-inline-block"
              id="facetsExpandCollapse"
              type="button"
              data-button-action="expand"
              data-toggle="tooltip"
              data-title="Expand all">
        <i class="expand-collapse-icon fal fa-chevron-double-down"></i>
      </button>


      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#facet-panel-collapse" aria-controls="facet-panel-collapse" aria-expanded="false" aria-label="Toggle facets">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>

    <% # container for facet groups -%>
    <% facet_group_names.each do |groupname| %>
      <%= render 'facet_group', groupname: groupname %>
    <% end %>
  </div>
<%- end %>
