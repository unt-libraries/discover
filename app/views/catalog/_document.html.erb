<% # container for a single doc -%>
<article class="document row <%= render_document_class document %> document-position-<%= document_counter%> " data-document-counter="<%= document_counter %>" itemscope itemtype="<%= document.itemtype %>">
  <%# image or icon for item %>
  <%= render_document_partials document, ['thumbnail'] %>

  <div class="col-sm-8  col-md-9">
    <%= render_document_partials document, ['index_header', 'index'], document_counter: document_counter %>
  </div>
</article>
