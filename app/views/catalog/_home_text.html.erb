<% content_for(:search_title) do %>
  <h1><%= t('blacklight.search.header') %></h1>
<% end %>

<% unless t('home.about.title').blank? %>
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= t('home.about.title') %></h1>
      <div class="text-muted border-left pl-3">
        <%= t('home.about.content').html_safe %>
      </div>
    </div>
  </div>
<% end %>

<div class="card">
  <div class="card-body">
    <h1 class="card-title"><%= t('home.featured.title') %></h1>
    <div class="row">
      <% t('home.featured.items').each do |item| %>
        <div class="col-12 col-sm-6 col-xl-4">
          <a href="<%= item[:link_url] %>"
            ga-on="click"
            ga-event-category="link - home"
            ga-event-action="<%= item[:title] %>"
            ga-event-label="<%= item[:link_url] %>"
            ga-event-value="1">
            <img class="img-fluid"
                 src="<%= asset_pack_path item[:img_src] %>"
                 alt="<%= item[:img_alt] %>">
          </a>
          <h5 class="mt-2"><a href="<%= item[:link_url] %>" target="_blank"><%= item[:title] %></a></h5>
          <p><%= item[:summary] %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
