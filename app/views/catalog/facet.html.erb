<div class="modal-header border-bottom-0">
  <h1 class="modal-title"><%= facet_field_label(@facet.key) %></h1>
  <button type="button" class="blacklight-modal-close btn-close" data-bs-dismiss="modal" aria-label="<%= t('blacklight.modal.close') %>"></button>
</div>

<div class="modal-body">
  <%= render partial: 'facet_index_navigation' if @facet.index_range && @display_facet.index? %>

  <div class="facet-extended-list list-group list-group-flush">
    <%= render_facet_limit(@display_facet, layout: false, class: 'list-group-item-action') %>
  </div>
</div>

<div class="modal-footer border-top-0">
  <div class="facet-pagination w-100 d-flex justify-content-between">
    <%= render :partial=>'facet_pagination' %>
  </div>
</div>
