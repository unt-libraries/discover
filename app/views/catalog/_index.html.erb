<% doc_presenter = index_presenter(document) %>
<%# default partial to display solr document fields in catalog index view -%>
<dl class="document-metadata dl-invert row">

  <% doc_presenter.fields_to_render.each do |field_name, field| -%>
    <div class="result__field">
      <dt class="blacklight-<%= field_name.parameterize %> result__label"><%= render_index_field_label document, field: field_name %></dt>
      <dd class="blacklight-<%= field_name.parameterize %> result__value"><%= doc_presenter.field_value field %></dd>
    </div>
    <% end -%>

</dl>

<%# Refworks -%>
<% if document.identifier_data[:"bib-id"] != '' -%>
    <%= link_to "http://export2refworks.library.unt.edu/processor_a.php?bib=#{document.identifier_data[:"bib-id"]}", target: "_blank" do %>
      <%= content_tag :div, "Add to Refworks" %>
    <% end %>
<% end -%>

<%# ILLiad -%>
<% if document.identifier_data[:"bib-id"] != '' -%>
  <%= link_to "https://unt.illiad.oclc.org/illiad/illiad.dll?Action%3D10&Form%3D30", target: "_blank" do %>
    <%= content_tag :div, " Request through ILLiad" %>
  <% end %>
<% end -%>