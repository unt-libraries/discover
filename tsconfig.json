{
  "compilerOptions": {
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./app/frontend/src/javascripts/@typings",
      "node_modules/@types"
    ],
  },
  "include": [
    "app/frontend//**/*",
    "spec/javascripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "app/frontend/vendor/**/*"
  ]
}
